
@{
    ViewData["Title"] = "Index";
}


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>


<div style="padding: 40px; width: 600px; height:680px; margin: 120px auto;" class=" mdl-card mdl-shadow--2dp">
    <canvas id="myChart" style="margin: auto auto;"></canvas>
</div>


<script>
var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: @ViewData["years"],
        datasets: [{
            label: 'Počet nově vzniklých holin',
            data: @ViewData["counts"],
            backgroundColor: 'rgba(255, 99, 132, 0.75)',
            borderColor: 'rgba(255,99,132,1)',
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>
